  <div class="ver-mas-container">
    <button id="ver-mas-btn">Ver más</button>
  </div>

  <script>
    document.getElementById("ver-mas-btn").addEventListener("click", function () {
      const ocultas = document.querySelectorAll(".tarjeta.oculta");
      ocultas.forEach(tarjeta => tarjeta.classList.remove("oculta"));
      this.style.display = "none"; // Oculta el botón después de mostrar
    });
  </script>

